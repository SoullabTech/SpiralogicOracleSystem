# Development Environment Template
# Copy to .env.local for development setup

# Core Configuration
NODE_ENV=development
DEPLOY_TARGET=local

# Server Ports (consistent with maya-quick-start.sh)
PORT=3002
APP_PORT=3002

# Frontend URLs
NEXT_PUBLIC_ENV_NAME=local
NEXT_PUBLIC_BACKEND_URL=http://localhost:3002
NEXT_PUBLIC_API_URL=http://localhost:3002
NEXT_PUBLIC_API_BASE_URL=http://localhost:3002/api

# Authentication (development values)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=development-secret-change-in-production
JWT_SECRET=generate-a-secure-256-bit-secret-for-development

# AI Service API Keys (REQUIRED - add your keys here)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Database Configuration (local development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres
# OR for file-based local development:
SOUL_MEMORY_DB_PATH=./backend/soul_memory.db

# Redis Configuration (local)
REDIS_URL=redis://localhost:6379

# Supabase Configuration (local development)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-local-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-local-supabase-service-role-key-here

# Maya/Sesame Configuration (development mode)
MAYA_REFINE_STREAM=1
MAYA_BREATH_MARKS=1
MAYA_STYLE_TIGHT=1
MAYA_SOFTEN_SAFETY=1

# Voice Configuration
USE_SESAME=true
VOICE_PROVIDER=sesame
SESAME_PROVIDER=local
HUGGINGFACE_TOKEN=your-huggingface-token-here

# Rate Limiting (relaxed for development)
RL_MSG_MAX=100
RL_STREAM_MAX=50

# Development Feature Flags
STREAMING_ENABLED=1
SAFETY_BYPASS_TEST=1
PSI_LITE_ENABLED=true
PSI_LEARNING_ENABLED=true
PSI_MEMORY_ENABLED=true

# Oracle Intelligence (development)
MAYA_MODE_DEFAULT=balanced
UNIVERSAL_FIELD_CACHE_TTL=300000
PATTERN_RECOGNITION_THRESHOLD=0.6
CRISIS_DETECTION_ENABLED=true

# Development Tools
ENABLE_PII_REDACTION=false
METRICS_PATH=/metrics
NEXT_PUBLIC_DEV_TOOLS=true