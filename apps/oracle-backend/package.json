{
  "name": "oracle-backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "pnpm run dev:backend",
    "dev:backend": "nodemon --watch src --ext ts --exec tsx -r tsconfig-paths/register src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test:backend": "vitest run --config vitest.config.ts",
    "test:backend:watch": "vitest --config vitest.config.ts --watch",
    "test:backend:coverage": "vitest run --coverage --config vitest.config.ts"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.50",
    "nodemon": "^3.1.10",
    "tsx": "^4.19.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
