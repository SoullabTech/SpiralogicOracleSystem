# Minimal, GPU-agnostic image that just runs the RunPod worker loop
FROM python:3.10-slim

ENV PYTHONUNBUFFERED=1
WORKDIR /app

# tiny layer set
RUN apt-get update && apt-get install -y --no-install-recommends ca-certificates \
 && rm -rf /var/lib/apt/lists/*

COPY services/sesame-tts/handler.py /app/handler.py

# only what we need to start the worker + wav writer
RUN pip install --no-cache-dir runpod==1.6.0

# this is critical: the RunPod serverless process
CMD ["python","-m","runpod"]