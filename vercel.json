{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "functions": {
    "app/api/soulprint/route.ts": {
      "maxDuration": 30
    },
    "app/api/journal/route.ts": {
      "maxDuration": 30
    },
    "app/api/sacred-timeline/route.ts": {
      "maxDuration": 30
    },
    "app/api/sacred-portal/route.ts": {
      "maxDuration": 30
    },
    "app/api/documents/analyze/route.ts": {
      "maxDuration": 60
    },
    "app/api/upload/route.ts": {
      "maxDuration": 60
    },
    "app/api/oracle/personal/route.ts": {
      "maxDuration": 30
    },
    "app/api/oracle/maya/route.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_API_MODE": "production",
    "NEXT_PUBLIC_MOCK_SUPABASE": "false",
    "NEXT_PUBLIC_MEMORY_REFERENCES_ENABLED": "true",
    "NEXT_PUBLIC_DISABLE_AUDIO_BANNER": "true"
  },
  "regions": ["iad1"],
  "github": {
    "silent": true,
    "autoJobCancelation": true
  },
  "rewrites": [
    {
      "source": "/beta",
      "destination": "/beta-signup"
    }
  ]
}