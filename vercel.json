{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install --legacy-peer-deps",
  "functions": {
    "app/api/soulprint/route.ts": {
      "maxDuration": 30
    },
    "app/api/journal/route.ts": {
      "maxDuration": 30
    },
    "app/api/sacred-timeline/route.ts": {
      "maxDuration": 30
    },
    "app/api/sacred-portal/route.ts": {
      "maxDuration": 30
    },
    "app/api/documents/analyze/route.ts": {
      "maxDuration": 60
    },
    "app/api/upload/route.ts": {
      "maxDuration": 60
    }
  },
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_API_MODE": "stub",
    "NEXT_PUBLIC_MOCK_SUPABASE": "true",
    "NEXT_PUBLIC_MEMORY_REFERENCES_ENABLED": "false",
    "NEXT_PUBLIC_DISABLE_AUDIO_BANNER": "true"
  },
  "regions": ["iad1"],
  "github": {
    "silent": true,
    "autoJobCancelation": true
  }
}