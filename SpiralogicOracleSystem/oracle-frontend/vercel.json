{
  "version": 2,
  "builds": [
    {
      "src": "oracle-frontend/src/main.tsx",  // Frontend main entry point for Vercel
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  // Routes API calls to Render backend
      "dest": "https://your-backend.onrender.com/api/$1"  // Render API URL
    },
    {
      "src": "/(.*)",  // All other requests serve the frontend
      "dest": "/index.html"  // Vercel will serve the main HTML file
    }
  ],
  "env": {
    "NEXT_PUBLIC_BACKEND_URL": "https://your-backend.onrender.com",  // Backend URL for the frontend
    "NEXT_PUBLIC_SUPABASE_URL": "<your-supabase-url>",  // Supabase URL for database access
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "<your-anon-key>"  // Supabase anon key for authentication
  },
  "ignore": [
    ".git",  // Git files to ignore
    "README.md",  // Documentation files to ignore
    "node_modules",  // Dependency folders to ignore
    "*.log",  // Log files to ignore
    "*.tsbuildinfo"  // TypeScript build info files to ignore
  ]
}
