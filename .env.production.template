# Production Environment Template
# Copy to .env.production and fill with actual values

# Core Configuration
NODE_ENV=production
DEPLOY_TARGET=production

# Server Ports (standardized)
PORT=3001
APP_PORT=3001

# Frontend URLs
NEXT_PUBLIC_ENV_NAME=production
NEXT_PUBLIC_BACKEND_URL=https://your-backend-domain.com
NEXT_PUBLIC_API_URL=https://your-backend-domain.com
NEXT_PUBLIC_API_BASE_URL=https://your-backend-domain.com/api

# Authentication
NEXTAUTH_URL=https://your-frontend-domain.com
NEXTAUTH_SECRET=GENERATE-256-BIT-SECRET-FOR-PRODUCTION
JWT_SECRET=GENERATE-DIFFERENT-256-BIT-SECRET-FOR-JWT

# AI Service API Keys (REQUIRED)
OPENAI_API_KEY=sk-proj-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here
ELEVENLABS_API_KEY=sk_your-elevenlabs-key-here

# Database Configuration (choose one)
DATABASE_URL=postgresql://username:password@host:5432/database_name
# OR for local file-based:
# SOUL_MEMORY_DB_PATH=./backend/soul_memory.db

# Redis Configuration
REDIS_URL=redis://username:password@host:6379

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Maya/Sesame Configuration
MAYA_REFINE_STREAM=1
MAYA_BREATH_MARKS=1
MAYA_STYLE_TIGHT=1
MAYA_SOFTEN_SAFETY=1

# Voice Configuration
USE_SESAME=true
VOICE_PROVIDER=sesame
SESAME_PROVIDER=northflank
NORTHFLANK_SESAME_URL=https://your-voice-service.northflank.app
HUGGINGFACE_TOKEN=hf_your-huggingface-token-here

# Rate Limiting
RL_MSG_MAX=60
RL_STREAM_MAX=30

# Feature Flags
STREAMING_ENABLED=1
SAFETY_BYPASS_TEST=0
PSI_LITE_ENABLED=true
PSI_LEARNING_ENABLED=true
PSI_MEMORY_ENABLED=true

# Oracle Intelligence
MAYA_MODE_DEFAULT=balanced
UNIVERSAL_FIELD_CACHE_TTL=900000
PATTERN_RECOGNITION_THRESHOLD=0.7
CRISIS_DETECTION_ENABLED=true

# Security & Observability
ENABLE_PII_REDACTION=true
METRICS_PATH=/metrics