{
  "name": "oracle-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Oracle Backend API Server - Sacred Techno-Interface",
  "type": "commonjs",
  "main": "dist/index-minimal.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm cache clean --force && npm install && npm run build:render",
    "build:minimal": "npm run clean && ./node_modules/.bin/tsc -p tsconfig.minimal.json && npm run postbuild:debug",
    "build:render": "npm run clean && echo 'Starting TypeScript compilation...' && ./node_modules/.bin/tsc -p tsconfig.render.json --diagnostics && npm run postbuild:debug",
    "build:render-simple": "npm run clean && echo 'Compiling server...' && ./node_modules/.bin/tsc src/server-simple.ts --outDir dist --esModuleInterop --skipLibCheck --target ES2020 --module commonjs && echo 'Build complete!' && ls -la dist/",
    "postbuild:debug": "echo '=== Build Output ===' && ls -la dist/ || echo 'No dist directory found'",
    "start": "node dist/server-simple.js",
    "start:minimal": "node dist/index-minimal.js",
    "start:prod": "node dist/server-simple.js",
    "start:server": "node dist/server.js",
    "dev": "nodemon",
    "render-build": "npm run build:render",
    "render-start": "node dist/server-simple.js",
    "copy-assets": "cp -r src/assets dist/ 2>/dev/null || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathIgnorePatterns=integration.test.ts,performance.test.ts",
    "test:integration": "jest integration.test.ts",
    "test:performance": "jest performance.test.ts --maxWorkers=1",
    "test:sacred-mirror": "jest sacred-mirror.test.ts",
    "test:soul-memory": "jest soul-memory.test.ts",
    "test:adaptive-wisdom": "jest adaptive-wisdom.test.ts",
    "test:production": "npm run test:unit && npm run test:integration && npm run lint && npm run type-check",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "jest --runInBand --no-cache --detectOpenHandles",
    "lint": "eslint src --ext .ts,.js --fix",
    "lint:check": "eslint src --ext .ts,.js",
    "type-check": "tsc --noEmit",
    "postbuild": "echo 'Build completed - Sacred Technology ready for deployment'"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.8",
    "@types/better-sqlite3": "^7.6.13",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.10.0",
    "jspdf": "^2.5.2",
    "html2canvas": "^1.4.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "llamaindex": "^0.3.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "zod": "^3.25.31"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.22",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.17.51",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
