{
  "watch": ["dist"],
  "ext": "js",
  "exec": "node dist/server.js",
  "ignore": [
    ".git",
    "node_modules",
    "dist/**/*.map",
    "dist/**/*.d.ts",
    ".tsbuildinfo",
    "*.log",
    ".env",
    "src/**"
  ],
  "env": {
    "NODE_ENV": "development",
    "NODE_OPTIONS": "--enable-source-maps"
  },
  "legacyWatch": true
}
