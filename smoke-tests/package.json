{
  "name": "soul-memory-bridge-smoke-tests",
  "version": "1.0.0",
  "description": "Smoke tests for Soul Memory AIN Bridge tracks",
  "scripts": {
    "test": "jest --testTimeout=60000",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --testTimeout=60000"
  },
  "dependencies": {
    "@playwright/test": "^1.47.0",
    "jest": "^29.7.0",
    "playwright": "^1.47.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/*.test.js"],
    "setupFilesAfterEnv": ["<rootDir>/test-setup.js"]
  }
}